<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Width="600" Height="1200" ResizeMode="NoResize">
   <Grid>
      <Grid.ColumnDefinitions>
         <ColumnDefinition Width="30*" />
         <ColumnDefinition Width="349*" />
         <ColumnDefinition Width="30*" />
      </Grid.ColumnDefinitions>
      <StackPanel Grid.Column="1">
         <Image x:Name="ScreenshotImage" Stretch="Uniform" Source="oip.jpg" Height="1100"/>
         <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
            <TextBlock FontSize="20" VerticalAlignment="Center" Margin="5,5,5,5">Start stage#:</TextBlock>
            <TextBox x:Name="StartStage" FontSize="20" MaxLines="1" VerticalAlignment="Center" Margin="5,5,5,5">1</TextBox>
            <TextBlock FontSize="20" VerticalAlignment="Center" Margin="5,5,5,5">Player:</TextBlock>
            <TextBox x:Name="PlayerName" FontSize="20" MaxLines="1" VerticalAlignment="Center" Margin="5,5,5,5">Ike</TextBox>
            <Button x:Name="PickImage" Click="PickImage_Click" VerticalAlignment="Center" FontSize="20" Height="50" Margin="5,5,5,5">Pick and Crop Image...</Button>
         </StackPanel>
      </StackPanel>
   </Grid>
</Window>
